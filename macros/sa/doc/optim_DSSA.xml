<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "file:///local/stow/scilab-4.1.1/lib/scilab-4.1.1/man/manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>optim_DSSA</TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>22-Aug-2007</DATE>
  <SHORT_DESCRIPTION name="optim_DSSA"> Direct Search Simulated Annealing </SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[xmin,x_history] = optim_DSSA(f,U,L,ItMX)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
  <PARAM_INDENT>

    <PARAM_ITEM>
    <PARAM_NAME>f</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : the objective function
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>U</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : a vector of upper bounds for x
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>L</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : a vector of lower bounds for x
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>ItMX</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : maximum number of iterations
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>xmin</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : the best solution found so far
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>x_history</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : a list of all the points generated by the optimization method
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
  </PARAM_INDENT>
  </PARAM>
 
  <DESCRIPTION>
     <DESCRIPTION_INDENT>
     <DESCRIPTION_ITEM>
     <P>
      This optimization method is an hybrid between simulated annealing and nelder-mead local search.
     </P>
     </DESCRIPTION_ITEM>
     </DESCRIPTION_INDENT>
  </DESCRIPTION>

  <SEE_ALSO>
    <SEE_ALSO_ITEM> <LINK> optim_sa </LINK> </SEE_ALSO_ITEM>
  </SEE_ALSO>

  <AUTHORS>
    <AUTHORS_ITEM label='collette'>
    yann.collette@renault.com
    </AUTHORS_ITEM>
  </AUTHORS>

  <BIBLIO>
    <SP>
     A. Hedar and M. Fukushima,Hybrid simulated annealing and direct   
     search method for nonlinear unconstrained global optimization, 
     Optimization Methods and Software, 17 (2002) 891-912.
    </SP>
  </BIBLIO>
</MAN>
